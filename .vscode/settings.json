{
  "stylelint.configFile": "./.stylelintrc.json",
  "stylelint.validate" : ["css", "scss"],
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Use Prettier plugin as default formatter
  "editor.formatOnSave": true, // Format files with default formatter when saving files
  "editor.codeActionsOnSave": { // Code action setting for file saving
    "source.fixAll.eslint": true, // Formatting with ESLint plugin
    "source.fixAll.stylelint": true, // Formatting with Stylelint plugin
  }
}
