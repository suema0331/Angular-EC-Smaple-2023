{
  "name": "sample-angular-app-2023",
  "version": "0.0.0",
  "description": "This is a sample e-commerce application using Angular with latest version, Firebase and Algolia.",
  "repository": {
    "type": "git",
    "url": "git@github.com:suema0331/Angular-EC-Smaple-2023.git"
  },
  "author": "Haruno Suematsu (https://github.com/suema0331/)",
  "scripts": {
    "ng": "ng",
    "config": "ts-node ./src/scripts/setenv.ts --environment=dev",
    "start": "npm run patch && npm run config && ng serve",
    "build": "npm run patch && npm run config && ng build --configuration=development",
    "build:pro": "npm run patch && ts-node ./src/scripts/setenv.ts --environment=prod && ng build --configuration=production",
    "watch": "npm run config && ng build --watch --configuration development",
    "e2e": "npx cypress open",
    "e2e:headless": "npx cypress run",
    "test": "ng test",
    "test-ci": "ng test --watch=false --browsers=ChromeHeadlessCustom",
    "test-report": "ng test --no-watch --code-coverage",
    "eslint": "eslint . --fix",
    "prettier": "prettier --check --write .",
    "stylelint": "stylelint **/*.{css,scss} --fix",
    "patch": "node src/scripts/patchFirestore.js",
    "build:stats": "ts-node ./src/scripts/setenv.ts --environment=prod && ng build --stats-json --configuration=production",
    "analyze": "webpack-bundle-analyzer dist/sample-angular-app-2023/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.1.2",
    "@angular/cdk": "^15.1.2",
    "@angular/common": "^15.1.2",
    "@angular/compiler": "^15.1.2",
    "@angular/core": "^15.1.2",
    "@angular/fire": "^7.5.0",
    "@angular/forms": "^15.1.2",
    "@angular/platform-browser": "^15.1.2",
    "@angular/platform-browser-dynamic": "^15.1.2",
    "@angular/router": "^15.1.2",
    "@angular/service-worker": "^15.1.2",
    "@fortawesome/fontawesome-free": "^6.2.1",
    "algoliasearch": "^4.14.3",
    "angular-instantsearch": "^4.4.0",
    "mdb-angular-ui-kit": "file:mdb/mdb-angular-ui-kit-4.0.0.tgz",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^15.0.0",
    "@angular-devkit/build-angular": "^15.1.3",
    "@angular/cli": "~15.1.3",
    "@angular/compiler-cli": "^15.1.2",
    "@cypress-audit/lighthouse": "^1.3.1",
    "@cypress-audit/pa11y": "^1.3.1",
    "@types/angularfire": "^0.8.34",
    "@types/jasmine": "^4.3.1",
    "@types/swagger-ui-dist": "^3.30.1",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "cypress": "^12.4.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "firestore-export-import": "^1.3.5",
    "husky": "^8.0.3",
    "jasmine-core": "^4.5.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "lint-staged": "^13.1.0",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.3.0",
    "swagger-ui-dist": "^4.15.5",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5",
    "webpack-bundle-analyzer": "^4.7.0",
    "yargs": "^17.6.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
